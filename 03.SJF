#include<stdio.h>
int main(){
int at[20],bt[20],ct[20],wt[20],tat[20],rt[20],start[20],i,n, done[20]={0};
int completed=0,currenttime=0;
printf("Enter the number of process:");
    scanf("%d",&n);
printf("Enter arrival time of all the processes:");
for(i=0;i<n;i++)
    scanf("%d",&at[i]);

printf("Enter burst time of all the processes:");
for(i=0;i<n;i++)
    scanf("%d",&bt[i]);

while(completed<n){
    int p=-1;
for(i=0;i<n;i++){
    if(!done[i] && at[i]<=currenttime){
        if(p ==-1 || bt[i]<bt[p])
            p=i;
}
}
if(p==-1)
    currenttime++;
else{
    start[p]=currenttime;
    ct[p]=start[p]+bt[p];
    tat[p]=ct[p]-at[p];
    wt[p]=tat[p]-bt[p];
    rt[p]=start[p]-at[p];

    done[p]=1;
    completed++;
    currenttime=ct[p];
}
}
    float totalwt=0,totaltat=0,totalrt=0;
    printf("PNo.\tAT\tBT\tST\tCT\tTAT\tWT\tRT\n");
    for(i=0;i<n;i++){
        printf("p[%d]\t%d\t%d\t%d\t%d\t%d\t%d\t%d\n",i+1,at[i],bt[i],start[i],ct[i],tat[i],wt[i],rt[i]);
        totalwt += wt[i];
        totaltat += tat[i];
        totalrt += rt[i];
    }
    printf("Avg waiting time = %.2f\n",totalwt/n);
    printf("Avg turn around time = %.2f\n",totaltat/n);
    printf("Avg response time = %.2f\n",totalrt/n);
return 0;
}


